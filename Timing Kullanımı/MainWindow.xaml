<Window x:Class="Timing_Kullanımı.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timing_Kullanımı"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Kaydet" x:Name="kayit" Click="kayit_Click"/>
            <Button Content="Çıkış"  x:Name="cikis" Click="cikis_Click"/>
            <Popup x:Name="mesaj1" AllowsTransparency="True" PopupAnimation="Slide" Placement="MousePoint">
                <Border Background="PaleGoldenrod">
                    <TextBlock>Dosya Verilerini Kaydet</TextBlock>
                </Border>
            </Popup>
            <Popup x:Name="mesaj2" AllowsTransparency="True" PopupAnimation="Slide" Placement="MousePoint">
                <Border Background="PaleGoldenrod">
                    <TextBlock>Programdan Çık</TextBlock>
                </Border>
            </Popup>
            <Button x:Name="yazi_buyut" Content="Yazıyı Büyüt" Click="yazi_buyut_Click"/>
            <TextBlock Text="Selam" x:Name="yazi" Background="DarkCyan" Foreground="Aquamarine"/>
        </StackPanel>
        
    </Grid>
</Window>
